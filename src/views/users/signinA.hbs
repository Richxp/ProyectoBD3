<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Account Login Administrator</h3>
            </div>
            <img src="/img/logo.jpg" class=" rounded-circle mx-auto d-block logo m-4" alt="Logo">
            <div class="card-body">
                <form action="/users/signinA" method="POST">
                    <div class="form-group">
                    <div class="form-group">
                        <input type="username" class="form-control" name="username" placeholder="Username" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Sign In
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>